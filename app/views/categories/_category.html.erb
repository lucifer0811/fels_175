<div class="col-md-4 blog-main box text-center">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title"><%= link_to category.name,
        category_path(category) %></h3>
      <p><%= category.description %></p>
    </div>
    <div class="panel-body">
      <div class="date_time"><%= localize_time category.created_at %></div>
      <br>
    </div>
  </div>
</div>
