<header class="header">
  <div class="row" id="header_nav">
    <%= link_to image_tag("framgia-logo-black-1.png"), root_path, id: "logo" %>
    <ul class="nav navbar-nav navbar-right" >
      <li class="<%= "active" if current_page?(root_path) %>">
        <%= link_to t("views.static_pages.home"), root_path %>
      </li>
      <% if user_signed_in? %>
        <% if current_user.is_admin? %>
          <li class="<%= "active" if current_page?(admin_categories_path)%>">
            <%= link_to t("views.categories.category"), admin_categories_path %>
          </li>
          <li class="<%= "active" if current_page?(admin_users_path)%>">
            <%= link_to t("views.users.user"), admin_users_path %>
          </li>
        <% else %>
          <li class="<%= "active" if current_page?(categories_path)%>">
            <%= link_to t("views.categories.category"), categories_path %>
          </li>
          <li class="<%= "active" if current_page?(users_path)%>">
            <%= link_to t("views.users.user"), users_path %>
          </li>
        <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <% if current_user.avatar.present? %>
              <%= image_tag(current_user.avatar, size: "20") %>
                <b class="caret"></b>
            <% else %>
              <%= image_tag("fram1.jpg", size: "20") %>
                <b class="caret"></b>
            <% end %>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("views.users.update"),
              edit_user_registration_path(current_user) %></li>
            <li><%= link_to t("views.users.profile"), current_user %></li>
            <li class="divider"></li>
            <li class="<%= "active" if current_page?(destroy_user_session_path)%>">
              <%= link_to t("views.static_pages.logout"), destroy_user_session_path,
                method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li class="<%= "active" if current_page?(new_user_session_path)%>">
          <%= link_to t("views.static_pages.login"), new_user_session_path %>
        </li>
      <% end %>
    </ul>
  </div>
</header>
