<header class="header">
  <div class="row" id="header_nav">
    <%= link_to image_tag("framgia-logo-black-1.png"), root_path, id: "logo" %>
    <ul class="nav navbar-nav navbar-right" >
      <li class="<%= "active" if current_page?(root_path) %>">
        <%= link_to t("views.static_pages.home"), root_path %>
      </li>
      <li class="<%= "active" if current_page?(static_pages_about_path)%>">
        <%= link_to t("views.static_pages.about"), static_pages_about_path %>
      </li>
      <li class="<%= "active" if current_page?(static_pages_contact_path)%>">
        <%= link_to t("views.static_pages.contact"), static_pages_contact_path %>
      </li>
      <li class="<%= "active" if current_page?(static_pages_help_path)%>">
        <%= link_to t("views.static_pages.help"), static_pages_help_path %>
      </li>
      <% if user_signed_in? %>
        <li class="<%= "active" if current_page?(destroy_user_session_path)%>">
          <%= link_to t("views.static_pages.logout"), destroy_user_session_path,
            method: :delete %>
        </li>
      <% else %>
        <li class="<%= "active" if current_page?(new_user_session_path)%>">
          <%= link_to t("views.static_pages.logout"), new_user_session_path %>
        </li>
      <% end %>
    </ul>
  </div>
</header>
