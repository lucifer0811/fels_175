<div class="row" >
  <div class="col-md-4" id="user_info">
    <div class="image">
      <% if current_user.avatar.present? %>
        <%= image_tag(current_user.avatar, class: "thumbnail") %>
      <% else %>
        <%= image_tag("fram1.jpg", class: "thumbnail", size: "200") %>
      <% end %>
    </div>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    <div class="information">
      <%= render "follow_form" %>
      <% if @user.name.present? %>
        <%= t "views.users.name" %>: <b><%= @user.name %></b>
      <% else %>
        <%= t "views.users.name" %>: <b><%= t "views.users.noname" %></b>
      <% end %><br />
      <%= t "views.users.email" %>: <b><%= @user.email %></b>
    </div>
  </div>
  <div class="col-md-8" id="user_activities">
    <center>
      <% if current_page? root_path %>
        <%= link_to t("views.categories.list_word"), words_path, class: "btn btn-primary",
          id: "button" %>
        <%= link_to t("views.users.lesson"), categories_path, class: "btn btn-primary",
          id: "button" %>
      <% end %>
    </center>
    <h3 class="title_list_activity">
      <center><%= t "views.users.activity" %></center></h3>
    <%= render "activity" %>
    <%= paginate @activities %>
  </div>
</div>
